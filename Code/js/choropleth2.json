{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Oil Production by Country",
  "width": 800,
  "height": 400,

  "params": [
    {
      "name": "year_equals",
      "value": 1900,
      "bind": {
        "input": "range",
        "min": 1900,
        "max": 2024,
        "step": 1,
        "name": "Select Year:"
      }
    }
  ],

  "data": {
    "url": "data/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "data/oceans.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "data/graticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "data/oil_production_filtered.csv"
                },
                "key": "Entity",
                "fields": ["Year", "Oil production (TWh)"]
              }
            },
             {
          "filter": "datum.Year == year_equals"
             }
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "color": {
              "field": "Oil production (TWh)",
              "type": "quantitative",
              "scale": {"type": "log", "domainMin": 0.1} 
            },
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "Oil production (TWh)", "type": "quantitative", "format": ".2f", "title": "Oil Production (TWh)"}
            ]
          }
        },

    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/countryInfo.csv"
            },
            "key": "name",
            "fields": ["latitude", "longitude"]
          }
        }
      ],
      "mark": {"type": "text"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "properties.NAME", "type": "nominal"},
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME'] == 'China' || datum['properties.NAME'] == 'Venezuela' || datum['properties.NAME'] == 'Australia' || datum['properties.NAME'] == 'Russia' ||  datum['properties.NAME'] == 'United Arab Emirates' ||  datum['properties.NAME'] == 'United States of America'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {}
}