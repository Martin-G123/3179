  },
  "transform": [
    {"filter": "datum.Entity === selected_country"},
    {
      "lookup": "Year",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Martin-G123/3179/refs/heads/main/Code/data/Oil%20Prices.csv"
        },
        "key": "Year",
        "fields": ["Oil Price (USD)"]
      },
      "as": ["Oil Price (USD)"]
    },
    {"filter": "datum['Oil Price (USD)'] != null"},
    {"filter": "datum['Oil production (TWh)'] > 0"}
  ],
  "mark": {
    "type": "circle",
    "size": 250,
    "opacity": 0.7,
    "stroke": "darkslategray",
    "strokeWidth": 1.5,
    "filled": true
  },
  "encoding": {
    "x": {
      "field": "Oil production (TWh)",
      "type": "quantitative",
      "title": "Oil Production (TWh)",
      "axis": {
        "titleFontSize": 14,
        "labelFontSize": 12,
        "grid": true,
        "gridOpacity": 0.5
      }
    },
    "y": {
      "field": "Oil Price (USD)",
      "type": "quantitative",
      "title": "Oil Price (USD per Barrel)",
      "axis": {
        "titleFontSize": 14,
        "labelFontSize": 12,
        "format": "$s",
        "grid": true,
        "gridOpacity": 0.5
      }
    },
    "color": {
      "field": "Year",
      "type": "quantitative",
      "scale": {
        "range": "heatmap",
        "domainMin": 1960
      },
      "legend": {
        "title": "Year",
        "orient": "right",
        "format": "d",
        "titleFontSize": 12,
        "labelFontSize": 10
      }
    },
    "tooltip": [
      {"field": "Entity", "title": "Country"},
      {"field": "Year", "type": "quantitative", "format": "d"},
      {
        "field": "Oil production (TWh)",
        "type": "quantitative",
        "title": "Production (TWh)",
        "format": ",.0f"
      },
      {
        "field": "Oil Price (USD)",
        "type": "quantitative",
        "title": "Price (USD)",
        "format": "$.2f"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": null
    },
    "axis": {
      "domainColor": "#ccc",
