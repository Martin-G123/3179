{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Oil Production (TWh) by Country",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/Martin-G123/3179/refs/heads/main/Code/data/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Martin-G123/3179/refs/heads/main/Code/data/oil_production_filtered.csv"
        },
        "key": "Entity",
        "fields": ["Oil production (TWh)"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "color": {
      "field": "Oil production (TWh)",
      "type": "quantitative",
      "scale": {"type": "log", "domainMin": 0.1} 
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Oil production (TWh)", "type": "quantitative", "format": ".2f", "title": "Oil Production (TWh)"}
    ]
  }
}